pipeline {
    agent any

    parameters {
        string(name: 'GitBranche', description: 'Branche de construction')
        string(name: 'SonUrl', description: 'Url depot')
        choice(name: 'openJDK', choices: ['JDK11', 'JDK17'], description: 'Choisir un JDK')
    }

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
        "${params.openJDK}"
    }
    

    stages {
        stage('Git') {
            steps {
                // Get some code from a GitHub repository
                git branch: "${params.GitBranche}",
                url: "${params.SonUrl}"
            }
        }
        stage('Compile') {
            steps {
                sh "mvn clean compile"
            }

        }
        stage('Test') {
            steps {
                sh "mvn test"
            }
            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }
        stage('Package') {
            steps {
                sh "mvn -DskipTests -Dmaven.test.skip package"
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar, target/*.war'
                }
            }    
        }
    }
}

